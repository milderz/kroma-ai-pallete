---
// Supports weights 100-900
import "@fontsource-variable/inter";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<title>Kroma AI Pallete</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	*,
	*::before,
	*::after {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--white: #ffffff;
		--accent: #d6fb41;
		--white-text: #f0f0f0;
	}
	html {
		font-size: 62.5%;
		scroll-behavior: smooth;
	}

	body {
		font-family: "Inter Variable", sans-serif;
		font-optical-sizing: auto;
		font-style: normal;
		font-weight: normal;
		font-display: swap;
		color: var(--white-text);
		background-color: #0a0a0a;
	}

	h1,
	h2,
	h3,
	h4,
	h5 {
		color: var(--white);
	}

	li {
		list-style: none;
	}

	a {
		text-decoration: none;
		color: var(--white-text);
	}
	p {
		font-size: 1.8rem;
		font-weight: 400;
	}

	button,
	input,
	select,
	textarea {
		font-family: inherit;
	}
</style>
